@startuml activity
start
:Launch Application;
:Select Mode;
if (Mode is User) then (User Mode)
    :Enter VRN;
    if (VRN Valid?) then (Yes)
        if (Vehicle in Car Park?) then (Yes)
            :Record Exit Time;
        else (No)
            :Record Entry Time;
        endif
        :Display Confirmation;
    else (No)
        :Display Error;
    endif
else (Admin Mode)
    :Enter Credentials;
    if (Credentials Valid?) then (Yes)
        :Select Admin Option;
        switch (Option)
        case (View Parked Vehicles)
            :Display Parked Vehicles;
        case (Search Records)
            :Search by VRN;
            :Display Records;
        case (Amend Records)
            :Select Record and Field;
            :Update Record;
            :Confirm Update;
        case (Delete Records)
            :Select Record to Delete;
            :Delete Record;
            :Confirm Deletion;
        endswitch
    else (No)
        :Display Authentication Error;
    endif
endif
stop
@enduml
